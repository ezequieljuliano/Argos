<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="mongodb" transaction-type="RESOURCE_LOCAL">
        <class>br.com.ezequieljuliano.argos.domain.Entidade</class>
        <class>br.com.ezequieljuliano.argos.domain.EventoNivel</class>
        <class>br.com.ezequieljuliano.argos.domain.EventoTipo</class>
        <class>br.com.ezequieljuliano.argos.domain.Usuario</class>
        <class>br.com.ezequieljuliano.argos.domain.UsuarioEvento</class>
        <class>br.com.ezequieljuliano.argos.domain.Evento</class>
        <class>br.com.ezequieljuliano.argos.domain.EventoCampoCustomizado</class>
        <class>br.com.ezequieljuliano.argos.domain.EventoValorCustomizado</class>
        <properties>
            <property name="eclipselink.target-database" value="org.eclipse.persistence.nosql.adapters.mongo.MongoPlatform"/>
            <property name="eclipselink.nosql.connection-spec" value="org.eclipse.persistence.nosql.adapters.mongo.MongoConnectionSpec"/>
            <property name="eclipselink.nosql.property.mongo.port" value="27017"/>
            <property name="eclipselink.nosql.property.mongo.host" value="localhost"/>
            <property name="eclipselink.nosql.property.mongo.db" value="Argos"/>
            <property name="eclipselink.logging.level" value="FINEST"/>
        </properties>
    </persistence-unit>
    
</persistence>